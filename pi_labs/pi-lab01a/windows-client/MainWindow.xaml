<Window x:Class="windows_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:windows_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="168.038" Width="190.506">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Value 1 : "/>
            <TextBox VerticalContentAlignment="Center" Name="val1" Width="140"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Value 2 : "/>
            <TextBox VerticalContentAlignment="Center" Name="val2" Width="140"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Push" Click="Button_Click" />
    </Grid>
</Window>
